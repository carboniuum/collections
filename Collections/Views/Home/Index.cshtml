@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Collections.Utils.PaginatedList<Item>

@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="max-w-7xl mx-auto px-4 relative">

    <h2 class="text-blue-500 uppercase tracking-wide font-semibold">
        @Localizer["MainTitle"]
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-12 border-gray-800 pb-16">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="mt-8">
                    <div class="relative inline-block">
                        <a asp-action="Show" asp-route-slug="@item.Slug">
                            @if (!String.IsNullOrWhiteSpace(item.File?.Name))
                            {
                                <img 
                                    src="~/uploads/@item.File.Name" 
                                    alt="@item.Name" 
                                    class="hover:opacity-75 transition ease-in-out duration-150 w-[170px] h-[250px]"
                                />
                            }
                            else
                            {
                                <div class="flex justify-center items-center bg-gray-800 w-[170px] h-[250px]">
                                    <span class="text-white text-2xl">No Image</span>
                                </div>
                            }
                        </a>
                    </div>
        
                    <div class="mt-4">
                        <a href="#" class="dark:text-white text-gray-900 text-lg font-semibold hover:text-gray-400">
                            @item.Name
                        </a>
                    </div>

                    <div class="mt-1">
                        @foreach (var tag in item.Tags)
                        {
                            <a  
                                asp-action="Index"
                                asp-route-tag="@tag.Name"
                                class="dark:text-white text-gray-900 mr-1 hover:text-gray-400"
                            >@tag.Name</a>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <h3 class="mt-10 text-red-500 uppercase font-medium">No items found...</h3>
        }
    </div>
    
    <div class="flex justify-center">
        @{
			var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
			var nextDisabled = !Model.HasNextPage ? "disabled" : "";
		}

        @if (Model.HasNextPage || Model.HasPreviousPage)
        {
            <a 
			    asp-action="Index"
			    asp-route-page="@(Model.PageIndex - 1)"
			    class="text-white px-4 mx-4 rounded bg-blue-500 @prevDisabled"
		    >
			     <img src="~/images/arrow-left.svg" class="w-10" />
		    </a>

		    <a 
			    asp-action="Index"
			    asp-route-page="@(Model.PageIndex + 1)"
			    class="text-white px-4 mx-4 rounded bg-blue-500 @nextDisabled"
		    >
			    <img src="~/images/arrow-right.svg" class="w-10" />
		    </a>
        }
    </div>
</div>
