<ul class="dark:text-white text-gray-900 flex ml-0 lg:ml-16 space-x-8 mt-6 lg:mt-0">
    @if (User.Identity.IsAuthenticated)
    {
        <li>
            Welcome 
            <b>@User.Claims.FirstOrDefault(c => c.Type == "Name").Value</b>
        </li>
        <li>
            <a 
                asp-area="Dashboard" asp-controller="Home" asp-action="Index" 
                class="hover:text-green-500"
            >
                Dashboard
            </a>
        </li>
        <li class="pl-4">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button class="hover:text-red-500" type="submit">Log Out</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a asp-controller="Account" asp-action="Login" class="hover:text-gray-400">Log In</a>
        </li>
    }
</ul>